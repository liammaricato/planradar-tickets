<p style="color: green"><%= notice %></p>

<% content_for :title, "Tickets" %>

<h1>Tickets</h1>

<%= form_with url: tickets_path, method: :get do |form| %>
  Assigned to:
  <%= form.select(
    :user_id,
    User.all.map { |user| [user.name, user.id] },
    { include_blank: "All users", selected: params[:user_id] }
  ) %>
  <%= form.submit "Filter" %>
<% end %>

<div id="tickets">
  <% @tickets.each do |ticket| %>
    <div class="outlined">
      <%= render ticket %>
    </div>
    <p>
      <%= link_to "Show this ticket", ticket %>
    </p>
  <% end %>
</div>

<%= link_to "New ticket", new_ticket_path %>
